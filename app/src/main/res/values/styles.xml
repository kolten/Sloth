<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DarkTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimaryDark">@color/colorDPrimaryLight</item>
        <item name="colorPrimary">@color/colorDPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorHint">@color/colorTextHint</item>c gy7
        <item name="actionBarTheme">@style/AppDarkTheme.ActionBar</item>
    </style>

    <style name="AppDarkTheme" parent="DarkTheme">
        <item name="android:background">@color/colorDarkBack</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppDarkTheme.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorDPrimary</item>
        <item name="android:popupBackground">@color/colorPopupBack</item>
    </style>

    <style name="AppDarkTheme.NoActionBar" parent="DarkTheme">
        <item name="android:windowBackground">@color/colorDarkBack</item>
        <item name="actionOverflowMenuStyle">@style/AppDarkTheme.ActionBar</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Note styling -->
    <style name="note_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="note_body_preview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>


    <style name="SplashTheme" parent= "Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_splash_screen</item>
    </style>

</resources>
